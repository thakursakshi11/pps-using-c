#include <stdio.h>

int main() {
    int i, j, space, num = 1;

    for (i = 1; i <= 4; i++) {
        // Print leading spaces
        for (space = 4 - i; space > 0; space--) {
            printf("  ");
        }

        // Print numbers
        for (j = 1; j <= (2 * i - 1); j++) {
            printf("%2d ", num);
            num++;
        }

        // Move to next line
        printf("\n");
    }

    return 0;
}
